#!/usr/bin/env bash
# This script configures Nginx to listen on port 80

# Install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Check if Nginx is running, if not, start it
if ! pgrep -x "nginx" > /dev/null; then
    service nginx start
fi

# Update Nginx configuration to listen on port 80
sed -i 's/listen 8080 default_server;/listen 80 default_server;/g' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
service nginx restart
